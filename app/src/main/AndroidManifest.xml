<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memorio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/helmet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/helmet"
        android:supportsRtl="true"
        android:theme="@style/Theme.Memorio">
        <activity android:name=".HardGameActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".MediumGameActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".EasyGameActivity" android:screenOrientation="portrait" />
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>